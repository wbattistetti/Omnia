  </ItemGroup>

  <ItemGroup>
    <Compile Include="FlowOrchestrator.vb" />
    <Compile Include="TaskGroupExecutor.vb" />
    <Compile Include="TaskExecutor.vb" />
    <Compile Include="ConditionEvaluator.vb" />
    <Compile Include="ExecutionState.vb" />
    <Compile Include="TaskExecutor\TaskExecutorBase.vb" />
    <Compile Include="TaskExecutor\UtteranceTaskExecutor.vb" />
    <Compile Include="TaskExecutor\SayMessageTaskExecutor.vb" />
    <Compile Include="TaskExecutor\ClassifyProblemTaskExecutor.vb" />
    <Compile Include="TaskExecutor\BackendCallTaskExecutor.vb" />
    <Compile Include="TaskExecutor\CloseSessionTaskExecutor.vb" />
    <Compile Include="TaskExecutor\TransferTaskExecutor.vb" />
    <Compile Include="TaskExecutor\TaskExecutorFactory.vb" />
    <Compile Include="TaskExecutor\CompiledTaskAdapter.vb" />
    <!-- TaskEngine (new, simplified, no reflection) -->
    <Compile Include="TaskEngine\Types.vb" />
    <Compile Include="TaskEngine\Microtask.vb" />
    <Compile Include="TaskEngine\TaskStep.vb" />
    <Compile Include="TaskEngine\StepExecutionState.vb" />
    <Compile Include="TaskEngine\DialogueContext.vb" />
    <Compile Include="TaskEngine\ITaskEngineCallbacks.vb" />
    <Compile Include="TaskEngine\ITaskEngineStateStorage.vb" />
