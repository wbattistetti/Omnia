<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <OptionStrict>On</OptionStrict>
    <OptionExplicit>On</OptionExplicit>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <RootNamespace>TaskEngine</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <!-- Includi esplicitamente tutti i file nell'ordine corretto -->
  <ItemGroup>
    <!-- Models - devono essere compilati per primi, nell'ordine delle dipendenze -->
    <Compile Include="Engine\Utils.vb" />
    <Compile Include="Models\DialogueState.vb" />
    <Compile Include="Models\TaskTypes.vb" />
    <Compile Include="Models\IVariableContext.vb" />
    <Compile Include="Models\GlobalVariableContext.vb" />
    <Compile Include="Models\ITask.vb" />
    <Compile Include="Models\Tasks\TaskBase.vb" />
    <Compile Include="Models\Tasks\MessageTask.vb" />
    <Compile Include="Models\Tasks\CloseSessionTask.vb" />
    <Compile Include="Models\Tasks\TransferTask.vb" />
    <Compile Include="Models\Response.vb" />
    <Compile Include="Models\Escalation.vb" />
    <Compile Include="Models\DialogueStep.vb" />
    <Compile Include="Models\ValidationCondition.vb" />
    <Compile Include="Models\NLPContract.vb" />
    <Compile Include="Models\CompiledNlpContract.vb" />
    <Compile Include="Models\TaskNode.vb" />
    <Compile Include="Models\ParseResultType.vb" />
    <Compile Include="Models\ParseResult.vb" />
    <Compile Include="Models\TaskInstance.vb" />
    <!-- DTO per deserializzazione JSON (solo per compatibilità con vecchie strutture) -->
    <Compile Include="Models\DTO\ResponseDTO.vb" />
    <Compile Include="Models\DTO\EscalationDTO.vb" />
    <Compile Include="Models\DTO\DialogueStepDTO.vb" />
    <!-- DDTNodeDTO e DDTInstanceDTO eliminati - ora si usano TaskTreeRuntime/MainDataNode (IDE, ex AssembledDDT) e DDTInstance/DDTNode (Runtime) -->
    <!-- Helpers -->
    <Compile Include="Helpers\TaskLoader.vb" />
    <!-- Engine -->
    <Compile Include="Engine\MessageEventArgs.vb" />
    <Compile Include="Engine\Parser.vb" />
    <Compile Include="Engine\Motore.vb" />
  </ItemGroup>

</Project>

